<%= form_with(model: coin, local: true) do |form| %>
  <%= render 'layouts/errors', object: @coin %>


  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_field :description, class:"form-control", placeholder: t('placeholders.coin.description') %>
  </div>

  <div class="form-group">
    <%= form.label :acronym %>
    <%= form.text_field :acronym, class:"form-control", placeholder: t('placeholders.coin.acronym') %>
  </div>

  <div class="form-group">
    <%= form.label :url_image %>
    <%= form.text_field :url_image, class:"form-control", placeholder:t('placeholders.coin.url_image') %>
  </div>

  <div class="field">
    <%= form.label :mining_type_id %>
    <%= form.select("mining_type_id", @mining_type_options, {include_blank:t('placeholders.coin.mining_type_id')}, class:"form-control") %>
  </div>

  <br>

  <div class="actions">
    <%= form.submit nil, class:"btn btn-primary" %>
    <%= link_to t('links.back'), coins_path, class:"btn btn-secondary" %>
  </div>
<% end %>
