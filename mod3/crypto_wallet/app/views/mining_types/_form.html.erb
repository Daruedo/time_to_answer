<%= form_with(model: mining_type, local: true) do |form| %>
 <%= render 'layouts/errors', object: mining_type %>

  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_field :description, class:"form-control", placeholder:t('placeholders.mining_type.description') %>
  </div>

  <div class="form-group">
    <%= form.label :acronym %>
    <%= form.text_field :acronym, class:"form-control", placeholder:t('placeholders.mining_type.acronym') %>
  </div>

  <br>

  <div class="actions">
    <%= form.submit nil, class:"btn btn-primary" %>
  </div>
<% end %>
